{
  "compilerOptions": {
	"target": "ES2020",
	"module": "CommonJS",
	"moduleResolution": "Node",
	"lib": ["ES2020", "DOM"],
	"types": ["node", "playwright"],
	"esModuleInterop": true,
	"resolveJsonModule": true,
	"strict": true,
	"skipLibCheck": true,
	"forceConsistentCasingInFileNames": true,
	"outDir": "dist",
	"rootDir": "."
  },
  "include": ["*.ts", "*.d.ts"],
  "exclude": ["node_modules", "dist"]
}